script/source = "extends Node2D

var held_object: RigidBody2D = null
var prev_mode = RigidBody2D.MODE_RIGID

func _process(_delta):
	var mouse_pos = get_viewport().get_mouse_position()
	var space_state = get_world_2d().direct_space_state

	# Click to pick up
	if Input.is_action_just_pressed(\"mouse_left\") and held_object == null:
		var query = PhysicsPointQueryParameters2D.new()
		query.position = mouse_pos
		query.collide_with_areas = true
		query.collide_with_bodies = true

		var results = space_state.intersect_point(query, 1)
		for result in results:
			if result.collider is RigidBody2D:
				held_object = result.collider
				prev_mode = held_object.mode
				held_object.mode = RigidBody2D.MODE_STATIC  # Stops physics
				break

	# Release to drop
	if Input.is_action_just_released(\"mouse_left\") and held_object != null:
		held_object.mode = prev_mode  # Restore physics mode
		held_object = null

	# While holding, move object to mouse
	if held_object:
		held_object.global_position = get_global_mouse_position()
"

